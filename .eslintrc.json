{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "tacit-dom"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "ignoreRestSiblings": true }],
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": ["error"],
    "no-undef": "error",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "tacit-dom/prefer-value-in-subscribe": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
