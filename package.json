{
  "name": "thorix",
  "version": "0.0.7",
  "description": "A React-like library with reactive signals and computed values for building dynamic web applicationsâ€”without the need for JSX",
  "type": "module",
  "main": "dist/thorix.cjs.js",
  "module": "dist/thorix.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:tsc": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "dev": "rollup -c --watch",
    "test": "jest",
    "lint": "eslint src/ examples/ --ext .ts",
    "lint:fix": "eslint src/ examples/ --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && eslint src/ examples/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level moderate",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "postinstall": "npm run build",
    "pre-commit": "npm run format:fix && npm run type-check && npm test",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "reactive",
    "signals",
    "computed",
    "dom",
    "components"
  ],
  "author": "mjbeswick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjbeswick/thorix.git"
  },
  "homepage": "https://github.com/mjbeswick/thorix#readme",
  "bugs": {
    "url": "https://github.com/mjbeswick/thorix/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vite": "^7.1.1"
  },
  "files": [
    "dist"
  ]
}
