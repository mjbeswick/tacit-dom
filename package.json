{
  "name": "tacit-dom",
  "version": "0.2.2",
  "description": "A React-like library with reactive signals and computed values for building dynamic web applicationsâ€”without the need for JSX",
  "type": "module",
  "main": "dist/tacit-dom.cjs.js",
  "module": "dist/tacit-dom.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && node scripts/build-size.js",
    "build:tsc": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "dev": "rollup -c --watch",
    "test": "jest",
    "lint": "eslint src/ examples/ --ext .ts",
    "lint:fix": "eslint src/ examples/ --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && eslint src/ examples/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level moderate",
    "i18n:extract": "tsx scripts/i18n-extract.ts",
    "i18n:extract:watch": "tsx scripts/i18n-extract.ts --watch",
    "size": "node scripts/build-size.js",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "pre-commit": "npm run format:fix && npm run type-check && npm test",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "release:patch": "npm version patch && npm publish && git push origin main && git tag v$(npm run version --silent) && git push origin v$(npm run version --silent)",
    "release:minor": "npm version minor && npm publish && git push origin main && git tag v$(npm run version --silent) && git push origin v$(npm run version --silent)",
    "release:major": "npm version major && npm publish && git push origin main && git tag v$(npm run version --silent) && git push origin v$(npm run version --silent)"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "reactive",
    "signals",
    "computed",
    "dom",
    "components"
  ],
  "author": "mjbeswick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjbeswick/tacit-dom.git"
  },
  "homepage": "https://github.com/mjbeswick/tacit-dom#readme",
  "bugs": {
    "url": "https://github.com/mjbeswick/tacit-dom/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/types": "^6.21.0",
    "audit-ci": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss-modules": "^6.0.1",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.1"
  },
  "files": [
    "dist"
  ]
}
